.featured {
	background-color: $light-gray
	background-image: url('../images/bg/bg-villa.jpg')
	background-repeat: no-repeat
	background-size: 100% rem(450)

	+below(670px) {
		background-size: 150% rem(300)
	}

	&__container {
		cf()
	}

	&__title {
		margin-top: rem(14)
		margin-bottom: rem(50)
		font-size: rem(74)

		+below(960px) {
			font-size: rem(60)
		}

		+below(670px) {
			font-size: rem(30)
		}
	}

	&__subtitle {
		&.-color-white {
			&::after,
			&::before {
				background-color: #fff
			}
		}
	}

	&__wrapper {
		cf()
		margin: rem(15) 0 rem(10) 0

		+below(960px) {
			margin: 0
		}
	}
}


.featured__item {
	cf()

	position: relative
	margin-top: rem(16)
	margin-bottom: rem(16)
	border: 1px solid #e5e5e5
	padding: rem(10) rem(10) rem(16)
	background-color: #fff
	width: 100%

	+below(670px) {
		padding-top: rem(5)
		padding-right: rem(5)
		padding-left: rem(5)
	}

	&.-is-special {
		border-color: $aqua

		&::after {
			content:''
			display: block
			position: absolute
			top: rem(-23)
			left: rem(-30)
			width: rem(160)
			height: rem(160)
			background-image: url('../images/svg/no-sprite/ribbon.svg')
			background-repeat: no-repeat
			background-size: contain

			+below(960px) {
				top: rem(-17)
				left: rem(-22)
				width: rem(120)
				height: rem(120)
			}

			+below(670px) {
				top: rem(-14)
				left: rem(-17)
				width: rem(100)
				height: rem(100)
			}
		}
	}

	&__title {
		position: relative
		margin-top: rem(5)
		margin-bottom: 0
		font-family: $bebas-font-family
		font-size: rem(36)
		line-height: 1.2
		text-align: center
		font-weight: 300
		color: #333
		white-space: nowrap

		a {
			text-decoration: none
			color: inherit
			outline: none

			&:hover {
				.icon {
					@extends .icon__heart-featured-full
				}
			}
		}

		.icon {
			position: absolute
			top: rem(10)
			left: 0
		}

		span {
			overflow: hidden
			display: block
			margin: 0 auto
		    max-width: 80%
		    text-overflow: ellipsis
		}
	}

	&__description {
		display: inline-block
		margin-top: rem(5)
		text-align: center
		font-family: $montserrat-font-family
		font-size: rem(12)
		font-weight: 700
		line-height: 1.5
		color: gray
		text-transform: uppercase
		text-overflow: ellipsis
		max-width: 90%
		overflow: hidden
		white-space: nowrap
	}

	&__section {
		cf()

		margin: rem(15) auto rem(20)
		max-width: rem(270)

		+below(400px) {
			margin-bottom: rem(15)
		}
	}

	&__facilities {
		float: left
	    border-right: 1px solid #d3d3d3
		padding-top: rem(10)
		padding-bottom: rem(10)
	    width: 50%
	    height: 100%
	    text-align: left
	    font-family: $montserrat-font-family
	    font-size: rem(12)
	    font-weight: 400
	    color: gray
	    text-transform: uppercase

		span {
			display: block
			line-height: 1.5
		}
	}

	&__price {
		padding-top: rem(10)
		padding-left: 9%
	    width: 50%
	    text-align: left
	    border-right: 0
		float: left
	    clear: none
	}

	&__buttons {
		cf()
	}

	&__button {
		display: inline-block
		width: 50%

		.button {
			width: 100%

			+below(960px) {
				padding-right: 0
				padding-left: 0
				text-align: center
			}
		}

		&:first-child {
			float: left
			padding-right: rem(3)

			.button {
				padding-top: rem(11)
				padding-bottom: rem(9)
				font-size: rem(16)
			}
		}

		&:last-child {
			float: right
			padding-left: rem(3)
		}

		+below(400px) {
			width: 100%
			margin-top: rem(5)
			margin-bottom: rem(5)

			&:first-child,
			&:last-child {
				padding-right: 0
				padding-left: 0
			}
		}
	}
}

.price {
	&__text {
		display: block
		margin-top: rem(3)
		margin-left: rem(12)
		font-family: $montserrat-font-family
		font-size: rem(12)
	    letter-spacing: rem(1)
	    font-weight: 400
	    color: gray
	    text-transform: uppercase
		text-align: left
	}

	&__number {
		font-size: 1.4375rem
	    line-height: 1
		display: block
	    font-family: Caslon,Arial,sans-serif
	    letter-spacing: rem(0.5)
	    font-weight: 600
	    font-style: italic
	    color: #00a2a7
	}
}

.featured__picture__container {
	position: relative
    max-width: 60.9375rem
    max-height: 25.9375rem
}

.featured__picture {
	display: block
	width: 100%
}

.featured__wrapper {
	margin: rem(5) 0 0
}

.featured__row {
	cf()

	margin: 0 auto rem(35)
	max-width: rem(2560)

	&.-three-columns {
		.featured__item {
			col(1/3, cycle: 3)

			+below(960px) {
				col(1/2, uncycle: 3, cycle: 2)
			}

			+below(670px) {
				col(1/1, uncycle: 2, cycle: 1)
			}
		}
	}

	&.-two-columns {
		.featured__item {
			col(1/2, cycle: 2)

			+below(960px) {
				col(1/1, uncycle: 2, cycle: 1)
			}
		}
	}
}

.featured__row__container {

	&.-has-separator {
		position: relative

		&::after {
			content: ''
			display: block
			margin: rem(65) auto
			max-width: rem(540)
			width: 80%
			height: 1px
			background-color: #eaeaea
		}
	}
}
