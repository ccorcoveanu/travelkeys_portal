.form__container {
	position: relative
	margin-right: auto
	margin-left: auto
	border: 1px solid #cccdce
	padding: rem(60) rem(60) rem(50)
	max-width: rem(990)
	text-align: center
	background-color: #f9f9f9
	box-shadow: 0px 0px 0px 5px #f9f9f9
	
	&::after {
		content: ''
		position: absolute
		top: rem(25)
		right: rem(25)
		display: block
		width: rem(175)
		height: rem(175)
		background-image: url('../images/svg/no-sprite/stamp-blue.svg')
		background-repeat: no-repeat
		
		+below(960px) {
			width: 20%
		}
	}
	
	+below(960px) {
		padding: rem(30) rem(10)
	}
	
	.section__title {
		margin-top: rem(10)
		margin-bottom: rem(35)
		max-width: rem(480)
		font-size: rem(52)
		line-height: 1
		
		+below(960px) {
			margin-top: rem(10)
			margin-bottom: rem(20)
			font-size: rem(30)
		}
		
		+below(670px) {
			margin-bottom: rem(10)
		}
	}
	
	.section__subtitle {
		margin-top: rem(10)
		font-family: $bebas-font-family
		font-size: rem(42)
		font-weight: 300
		color: #707070
		
		+below(960px) {
			font-size: rem(21)
			color: #b9b9b9
		}
		
		&::after,
		&::before {
			content: none
		}
	}
}
 
.form {
	cf()
	
	&__input__container {
		position:relative
		display: inline-block
		vertical-align: middle
		margin: rem(5)
		border: 1px solid #dfdfdf
		text-align: left
		font-family: $montserrat-font-family
		font-size: rem(12)
		line-height: rem(35)
		font-weight: 400
		color: #808080
		text-transform: uppercase
		background-color: #fff
		white-space: nowrap
		cursor: pointer
		appearance: none
		
		&--short {
			max-width: rem(105)
			width: 100%

			+below(960px) {
				padding: rem(5) 0
				max-width: rem(145)
				height: rem(45)
			}

			.form__input {
				+below(960px) {
					line-height: 20px
				}
			}

			&::after {
				content: none
			}

			.icon__option-simple {
				position: absolute
				top: rem(14)
				right: rem(10)

				+below(1150px) {
					top: 11px
				}

				+below(1100px) {
					top: 10px
				}

				+below(960px) {
					@extends .icon__option-simple-small
					top: rem(18)
				}
			}
		}
	}
	
	&__intro {
		&__container {
			cf()
			padding: rem(40) 0 rem(120)
			text-align: left
			background-image: url("../images/bg/bg-sent-simple.png")
			background-repeat: no-repeat
			background-size 53%
			background-position: right center
			background-size: rem(420)
			
			+below(960px) {
				center(rem(620))
				padding-bottom: rem(40)
				background-size 40%
				background-position: right 65%
			}
			
			.quality__list {
				width: 70%
				
				+below(670px) {
					width: 100%
				}
				
				&__item {
					+below(670px) {
						width: 100%
					}
				}
			}
			
			+below(670px) {
				center(rem(320))
				margin-bottom: rem(40)
				padding: rem(10) rem(40) rem(260)
				background-position: left bottom
				background-size: 100%
			}
		}
		
		&__subtitle {
			color: #707070
			font-family: $caslon-font-family
			font-size: rem(21)
			font-weight: 600
			font-style: italic
			
			+below(960px) {
				max-width: rem(380)
			}
			
			span {
				+below(670px) {
					display: block
				}
			}
			
			+below(670px) {
				margin-right: auto
				margin-left: auto
				max-width: 100%
				font-size: rem(17)
				text-align: center
			}
		}
	}

	&__input {
		outline: 0
		position: relative
		cursor: pointer
		padding-left: rem(10)
		padding-bottom: rem(10)
		padding-top: rem(10)
		width: 100%

		&::placeholder {
			opacity: 1
			font-size: rem(11)
			color: #808080
			text-transform: uppercase
    	}

	    +below(480px) {
			line-height: rem(25)
	    }
	}
}

.site-search {
	+below(480px) {
		position: absolute
		left: 0
		width: 100%
	}
	
	&__input {
		display: inline-block
		vertical-align: middle
		outline: 0
		border: 1px solid #2f3133
		border-radius: 3px 0px 0px 3px
		padding-left: rem(10)
		width: rem(180)
		height: rem(30)
		font-size: rem(13)
		background-color: #000
		
		+below(960px) {
			padding-left: rem(10)
			border-radius: 0
			width: rem(150)
			height: rem(45)
			font-size: rem(14)
		}
		
		+below(480px) {
			width: 100%
			padding-left: rem(95)
		}

		&:focus {
			border: 1px solid $aqua
			+below(480px) {
				padding-left: rem(10)
			}
		}
		
		&:focus + label {
			+below(480px) {
				opacity: 0
				visibility: hidden
			}
		}

	    &::placeholder {
			display: inline-block
			opacity: 1
			padding-top: rem(2)
			font-size: rem(11)
			color: #6c747b
			text-transform: uppercase
			
			+below(480px) {
				font-size: rem(14)
			}
	    }
	}
}

form.site-search {
	+below(960px) {
		margin-top: rem(30)
	}
	
	+below(480px) {
		margin-top: rem(10)
	}
}

