// !Common
// ==|=========================================================================
// Globals
* {
	box-sizing: border-box
}

html {
	font-size: $base-font-size-px

	+below(1250px) {
		font-size: 15px
	}

	+below(1165px) {
		font-size: 14px
	}

	+below(1100px) {
		font-size: 13px
	}

	+below(1015px) {
		font-size: 12px
	}

	+below(960px) {
		font-size: 16px
	}
}

body {
	width: 100%
	min-width: rem(320)

	&.-overlay {
		+below(960px) {
			position: relative

			&::after {
				content:''
				position: absolute
				z-index: 400
				top: 0
				opacity: .9
				width: 100%
				height: 100%
				background-color: $dark-gray
			}
		}
	}
}

strong {
	&.-color-white {
		color: #fff
	}
}

.main {
	padding-top: rem(60)

	+below(960px) {
		padding-top: rem(60)
	}

	+below(480px) {
		padding-top: rem(50)
	}
}

.container {
	center(rem(1150))
	padding: 0 rem(10)

	&.-position-right {
		+above(960px) {
			margin-left: 38.55%
		}

		+below(960px) {
			center(rem(1150), pad = rem(10))
		}
	}

	+below(960px) {
		padding: 0 rem(20)
	}
}

// !Helpers
// ==|=========================================================================
.-size-sm {
	span(1/2)
}

.-hides-for-medium-down {
	+below(960px) {
		display: none
	}
}

.-hidden-md-up {
	+above(960px) {
		display: none
	}
}

.-shows-md-only {
	display: none

	+between(670px, 960px) {
		display: block
	}
}

.-hides-for-small-down {
	display: inline-block

	+below(670px) {
		display: none
	}
}

.-show-for-small-down {
	display: none

	+below(670px) {
		display: inline-block
	}
}

.-color-theme-black {
	color: #333
}

.-color-aqua {
	color: $aqua
}

// !Header
// ==|=========================================================================
.header {
	// Fix for chrome on-scroll flicker
	transform: translateZ(0)
	position: fixed
	z-index: 500
	min-width: rem(320)
	width: 100%

	&__top {
		background-color: $black
		box-shadow: 0 1px 0 rgba(37, 42, 46, .5)
	}

	&__top__wrapper {
		cf()
		float: left
		position: relative
		z-index: 200

		+below(960px) {
			width: 100%
			background-color: #181b1f
		}
	}

	&__bottom {
		+below(960px) {
			position: absolute
			z-index: 100
			top: -100vh
			width: 100%
			background-color: $black

			&.-state-visible {
				top: 0
				padding-top: rem(40)
				transition: top 500ms ease-in-out

				+below(480px) {
					padding-top: rem(30)
				}
			}

			+below(690px) {
				height: 100vh
				overflow: scroll
				-ms-overflow-style: none
			}
		}
	}

	&__contact {
		clear: both
		opacity: 1
		visibility: visible
		margin: 0 rem(-15) 0 rem(-15)
		padding: 0
		text-align: center
		background-color: $dark-gray
		box-shadow: 0 1px 3px rgba(0, 0, 0, .2)
		transition: opacity 300ms ease-in-out, visibility 300ms ease-in-out

		&.-hidden {
			opacity: 0
			visibility: hidden
		}

		+above(960px) {
		  position: absolute
		  z-index: -1
		  bottom: rem(-35)
		  width: 100%
		}

		+below(960px) {
			background-color: $aqua
			margin: 0
		}

		&__item {
			display: inline-block
			position: relative
			margin: rem(10) rem(18)
			font-family: $montserrat-font-family
			font-size: rem(11)
			font-weight: 400
			color: #6c747b
			text-transform: uppercase

			+below(960px) {
				margin: rem(10) rem(30)
			}

			+below(400px) {
				margin: rem(10)
			}

			&:first-child {
				small {
					+below(520px) {
						text-align: right
					}
				}
			}

			// Separators contact items
			&::after {
				content: '|'
				position: absolute
				top: rem(2)
				right: rem(-20)
				color: #33383c

				+below(960px) {
					content: ''
					opacity: .2
					right: rem(-32)
					background-color: #fff
					width: 1px
					height: rem(30)

				}

				+below(520px) {
					height: rem(50)
					top: rem(-5)
				}

				+below(400px) {
					right: rem(-14)
				}
			}

			&:nth-child(2)::after {
				+below(960px) {
					content: none
				}
			}

			&:last-child {
				+below(960px) {
					display: none
				}

				&::after {
					content: none
				}
			}
		}

		&__text {
			display: inline-block
			vertical-align: middle
			margin-right: rem(10)
			font-size: rem(11)

			+below(960px) {
				margin-top: rem(5)
				margin-right: rem(15)
				font-size: rem(8)
				color: #fff
			}

			+below(520px) {
				display: block
				margin: 0
				text-align: left
			}
		}

		&__link {
			display: inline-block
			vertical-align: middle
			font-size: rem(14)
			color: #Adb0b3
			text-decoration: none
			transition: color 200ms ease-in-out

			+below(960px) {
				font-family: $bebas-font-family
				font-size: rem(30)
				color: #fff
			}

			&:hover {
				color: $aqua

				+below(960px) {
					color: $black
				}
			}
		}
	}

	&__logo {
		text-decoration: none

		&__title {
			margin rem(15) 0
			font-family: $bebas-font-family
			font-size rem(30)
			line-height: 1
			font-weight: 300
			color: #fff
			text-transform: uppercase

			+below(960px) {
				float: left
				margin-left: rem(10)
			}

			+below(480px) {
				font-size: rem(24)

			}
		}

		&__text {
			display: inline-block
			vertical-align: middle
			margin: rem(5) 0 0 rem(5)
			height: 100%
			font-family: $caslon-font-family
			font-style: italic
			font-size: rem(18)
			line-height: 1
			color: #fff
			text-transform: none

			+below(480px) {
				font-size: rem(11)
			}
		}

		.logo {
			display: inline-block
			vertical-align: middle
			margin: rem(5) 0 0 0

			+below(480px) {
				width: rem(60)
			}
		}
	}
}


.header__top {
	// *jeet* Gives full width
	// and a lateral padding of 15px
	center(100%, pad = rem(15))

	+below(960px) {
		padding: 0
	}
}

.header__bottom::-webkit-scrollbar {
	display: none
}

.header__nav {
	background-color: #121518

	+below(960px) {
		cf()

		padding: rem(50) 0 rem(15)
		background-color: $black
	}

	+below(760px) {
		padding: rem(50) rem(10) rem(15)
	}

	+below(690px) {
		float: none
		margin: 0 auto
		width: rem(340)
	}

	+below(480px) {
		width: rem(380)
		padding-bottom: rem(40)
	}

	+below(375px) {
		width: 100%
	}
}

.header__nav::-webkit-scrollbar {
	display: none
}

.header__logo {
	+below(960px) {
		width: initial
		background-color: #181b1f
	}
}

// !Hero
// ==|=========================================================================
.hero {
	position: relative
	padding: 0

	+above(960px) {
		height: rem(880)
	}

	+below(960px) {
		height: initial

		.container {
			padding: 0
		}
	}

	+below(768px) {
		.container {
			max-width: 100%
		}
	}

	&__container {
		position: relative
		z-index: 3
		margin-right: auto
		margin-left: auto
		padding-top: rem(30)
		height: 100%
		text-align: center

		+below(960px) {
			center(100%)
			padding-top: 0
		}
	}

	.villa-search {
		margin: 0
	}

	&__title {
		margin: rem(40) 0 rem(30)
		font-family: $caslon-font-family
		font-size: rem(72)
		line-height: 1
		font-weight: 600
		font-style: italic
		text-shadow: 0 1px 3px rgba(0, 0, 0, 0.22)
		color: #fff

		+below(960px) {
			margin: rem(30) auto rem(70)
			max-width: rem(320)
			font-size: rem(46)
			line-height: 1
		}

		+below(480px) {
			max-width: rem(300)
			font-size: rem(41)
		}
	}
}

.home {
	.hero {
		&__container {
			background-image url("../images/bg/bg-home.jpg")
			background-size: cover
			background-repeat: no-repeat
			background-position: center

			+below(960px) {
				margin-top: 0
			}
		}

		.filter.-orientation-vertical {
			.filter__form {
				+below(960px) {
					text-align: center
				}
			}
		}

		&__spacer {
			margin-top: rem(80)
			margin-bottom: rem(50)
			text-align: center
			font-family: $caslon-font-family
			font-size: rem(22)
			font-weight: 400
			font-style: italic
			line-height: 1.2
			color: #fff
			text-shadow: 0px 0px rem(27) rgba(0, 0, 0, 0.2)
		}

		.button.-anchor-hero {
			+below(960px) {
				margin-bottom: rem(60)
			}
		}

		&__title {
			position: relative
			margin-top: rem(100)
			line-height: 1.2

			+below(960px) {
				margin-top: rem(90)
				margin-bottom: rem(60)
			}

			&::after {
				content: ''
				display: block
				margin: rem(90) auto rem(110)
				height: rem(2)
				width: rem(80)
				background-color: white

				+below(960px) {
					content: none
				}
			}
		}
	}
}

// !Property
// ==|=========================================================================
.property {
	// Exception from hiding
	.header__contact.-hidden {
		opacity: 1
		visibility: visible
	}

	.form__container {
		&::after {
			top: rem(150)
			right: rem(2)
		}
	}

	&__form {
		.-quarter-width.-anchor-datepicker {
			.form--letter__label {
				margin-right: rem(5)
			}

			.form--letter__input {
				+above(960px) {
					padding-bottom: rem(16)
					padding-top: rem(16)
					font-size: rem(11)
				}
			}

			&:first-child {
				margin-left: rem(-45)

				+below(960px) {
					margin-left: 0
				}
			}
		}

		.-quarter-width.-anchor-counter {
			+below(960px) {
				border: 1px solid #dfdfdf
			}

			.select2-chosen {
				+above(960px) {
					position: relative
					top: rem(5)
				}
			}

			.filter__input__name {
				position: absolute
				top: rem(8)
				left: rem(-25)

				+below(960px) {
					top: rem(-33)
					left: 0
				}
			}

			&:first-child {
				margin-left: rem(-24)

				+below(960px) {
					margin-left: 0
				}

				.filter__input__name {
					left: rem(-38)

					+below(960px) {
						left: 0
					}
				}
			}
		}

		.form--letter {
			margin-top: 0

			.message__title {
				font-size: rem(72)
			}
		}

		.filter__options--letter {
			margin-bottom: rem(45)
			text-align: left

			+below(960px) {
				margin-bottom: rem(30)
			}
		}

		.filter__option--letter {
			.filter__option__label {
				+below(960px) {
					font-size: rem(12)
				}
			}

			&.-has-label {
				display: block

				+below(670px) {
					width: 100%
					text-align: center
				}

				.filter__option__label {
					font-size: rem(17)
				}
			}

			.form--letter__label {
				margin-bottom : rem(10)
				margin-left: 0

				+below(960px) {
					margin-bottom: 0
				}
			}
		}
	}

	.hero {
		+above(960px) {
			height: rem(900)
			background-image: url('../images/bg/bg-hero.jpg')
			background-repeat: no-repeat
			background-size: cover

			.slider {
				display: none
			}

			+below(960px) {
				height: initial

				.filter--booking__section.-anchor-details {
					text-align: left
				}

				.form__input__container.filter__input__container,
				.form__input__container.filter__input__container.-anchor-counter {
					max-width: rem(130)
					width: 100%
				}

				.filter.filter--booking .filter__button__wrapper .button__text-alt {
					display: block
				}

				.filter--booking__section.-anchor-filters {
					text-align: left
				}

				.slider {
					display: block
				}

				.filter--booking.-orientation-vertical {
					margin: 0
					max-width: 100%
					width: 100%
					background-color: #f1f1f1
				}
			}
		}

		&__container {
			center(100%)
			margin-top: 0

			+below(960px) {

			}

			&.-anchor-counter {
				margin-left: rem(65)
			}
		}

		&__wrapper {
			// Nullifies previous source ordering
			span(3/3)
			unshift(1/3)
			margin-bottom: rem(20)
			padding-left: 0
			text-align: left

			+below(960px) {
				margin-bottom: 0
				margin-top: rem(-275)
				position: relative
				text-align: center
				// Allows to slide behind
				pointer-events: none
			}
		}

		&__carousel__wrapper {
			overflow: hidden
			float: right
			display: inline-block
			width: 65%

			+below(960px) {
				display: none
			}
		}

		&__carousel {
			overflow: hidden
			border: 10px solid #fff
			height: rem(564)

			img {
				width: 100%
				height: rem(554)
			}
			&__action {
				position: absolute
				z-index: 1
				right: rem(25)
				bottom: rem(110)
				pointer-events: none
			}
		}

		&__carousel__nav {
			margin: rem(35) auto 0
			width: rem(640)
			height: rem(55)

			.slick-slide {
				margin: 0 rem(5)
				height: rem(50)
				border: 3px solid #fff

				&.-is-current {
					border-color: #54c5d0
				}
			}

			.slick-prev,
			.slick-next {
				outline: 0
				position: absolute
				top: rem(8)
				border: 0
				color: transparent
				background-color: transparent
			}

			// Append new appearance icons
			.slick-prev {
				@extends .icon__nav-left-white
				left: rem(-30)
			}

			.slick-next {
				@extends .icon__nav-right-white
				right: rem(-30)
			}

			img {
				width: 100%
				height: 100%
			}
		}

		.filter__wrapper {
			// Full width
			span(3/3)
			// Nullifies previuos source ordering
			unshift(-2/3)
			width: 35%

			+below(960px) {
				width: 100%
			}
		}

		&__title {
			display: inline-block
			width: rem(560)
			font-family: $bebas-font-family
			font-size: rem(40)
			line-height: rem(72)
			font-weight: 400
			font-style: normal
			color: #fff
			text-shadow: none
			overflow: hidden
			text-overflow: ellipsis
			vertical-align: bottom
			white-space: nowrap

			+below(960px) {
				display: block
				margin-top: rem(40)
				margin-bottom: rem(90)
				width: 100%
				font-size: rem(39)
				line-height: rem(39)

			}
		}
	}

	.villa-search__section {
		+below(960px) {
			display: block
		}

		.map {
			+below(960px) {
				min-height: 0
			}
		}
	}

	.map {
		&__container {
			+below(960px) {
				display: none
			}
		}

		&__image {
			display: none

			+below(960px) {
				display: block
				margin-bottom: rem(-4)
			}

			img {
				width: 100%
			}
		}

		.map__markers {
            display: none
        }

		.map__overlay {
			&.-position-top {
				padding: rem(30) rem(10) 0
				min-height: rem(170)

				+below(960px) {
					min-height: rem(220)
					position: static
				}

				+below(670px) {
					padding-top: rem(40)
				}

				+below(320px) {
					padding-top: rem(20)
				}

				.map__wrapper {
					text-align: left

					+below(960px) {
						float: none
						margin: 0 auto
						max-width: rem(800)
						width: 100%
					}
				}
			}

			&.-position-bottom {
				+below(960px) {
					display: none
				}
			}
		}

		&__list {
			display: inline-block
			vertical-align: text-top
			margin-top: rem(10)
			max-width: rem(360)
			text-align: left

			&__item {
				padding-bottom: rem(20)
				width: rem(350)
				color: #fff

				+below(960px) {
					font-size: rem(15)
				}

				+below(670px) {
					width: initial
				}

				strong {
					color: #fff
				}

				&::before {
					background-image: url('../images/svg/icon-checkmark-white.svg')
				}
			}
		}

		.description__title {
			width: rem(200)
			text-align: left
			color: #fff

			+below(960px) {
				width: rem(170)
				font-size: rem(34)
			}
		}
	}

	// Cloned hero header for modals
	.fancybox-wrap {
		.hero__wrapper {
			position: absolute
			bottom: 100%
			margin-bottom: rem(28)
		}

		.hero__title {
			margin: 0
			width: initial
			font-size: rem(42)
		}

		.location {
			margin-left: rem(10)
			padding-left: rem(10)

			&::after {
				top: 0
				height: rem(65)
			}

			&__item {
				margin-right: rem(5)
				margin-left: rem(5)

				&__text {
					font-size: rem(21)
				}

				.icon {
					margin-bottom: rem(-5)
					transform: scale(.6)
				}
			}
		}
	}
}

