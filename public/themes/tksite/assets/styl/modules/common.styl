// !Concierge
// ==|=========================================================================
.concierge {
	.hero--secondary {
		// Prevent video from overflowing
		overflow: hidden
		// fallback for ios devices - not playing <video>
		background-color: #000
		background-image: url('../images/bg/bg-concierge.jpg')
		background-repeat: no-repeat
		background-size: cover
		background-position: 40%

		&__image {
			margin-top: rem(50)

			+below(960px) {
				margin-top: rem(40)
				width: rem(125)
			}

			+below(670px) {
				display: none
			}
		}

		&__title {
			margin-top: rem(30)
