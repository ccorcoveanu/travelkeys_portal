.property-gallery {
	.fancybox-wrap {
		top: 20vh !important
	}

	.fancybox-inner {
		border: rem(10) solid white
	}

	.fancybox-next {
		right: rem(-100)
	}

	.fancybox-close {
		top: rem(-60)
		right: rem(40)
	}
}

