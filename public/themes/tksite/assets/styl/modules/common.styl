// !Footer
// ==|=========================================================================
.footer {
	padding: rem(40) 0 rem(50)
	text-align: center
	background-color: $dark-gray
	background-image: url('../images/bg/bg-worldmap.png')
	background-repeat: no-repeat
	background-position: center 20%

	&__header {
		margin-top: rem(50)

		+below(960px) {
			margin-top: rem(10)
		}
	}

	&__container {
		cf()
		margin-bottom: rem(30)
	}

	&__section__title {
		margin: rem(10) 0 rem(15)
		font-family: $helvetica-font-family
		font-size: rem(14)
		line-height: rem(20)
		font-weight: 400
		color: #70767b
	}

	&__title {
		margin: rem(14) 0 rem(20)

		// Lines-on-Sides heading
		+below(960px) {
			&::after,
			&::before {
				content: ''
				display: inline-block
				position: relative
				top: rem(-8)
				width: rem(70)
				height: 1px
				background-color: #999

			}

			&::before {
				margin-right: rem(20)
			}

			&::after {
				margin-left: rem(20)
			}
		}
	}

	&__subtitle {

		&::before,
		&::after {
			+below(960px) {
				content: none!important
			}
		}
	}

	.button {
		padding: rem(10) rem(15)
		font-weight: 700
	}

	.newsletter {
		+below(960px) {
			display: none
		}
	}
	.newsletter__title {
		margin-bottom: rem(20)
		font-family: $caslon-font-family
		font-size: rem(36)
		font-weight: 600
		font-style: italic
		color: #808080
	}

	.footer__social {
		+below(960px) {
			display: none
		}

		.footer__section__title {
			margin: 0 auto
			max-width: rem(140)
		}

		&__list {
			list-style-type: none
			margin-top: rem(10)
			padding: 0

			&__item {
				display: inline-block

				a:hover {
					.icon__facebook {
						@extends .icon__facebook-blue
					}

					.icon__twitter {
						@extends .icon__twitter-blue
					}

					.icon__instagram {
						@extends .icon__instagram-blue
					}

					.icon__google {
						@extends .icon__google-blue
					}
				}
			}
		}
	}

	&__contact {
		cf()
		margin: 0 auto
		max-width: rem(340)

		+below(960px) {
			.footer__section__title {
				display: none
			}
		}

		&__item {
			col(1/2)
			position: relative
			text-align: right

			&::after {
				content: ''
				position: absolute
				top: rem(-20)
				right: rem(-18)
				width: 1px
				height: rem(80)
				background-color: #fff
				transform: rotate(30deg)
			}

			&:last-child::after {
				content: none
			}

			&.-first {
				padding-right: rem(8)

				+below(375px) {
					padding-right: 0
				}
			}

			&__link {
				display: block
				padding-right: 1px
				font-family: $caslon-font-family
				font-size: rem(24)
				line-height: 1
				font-weight: 700
				font-style: italic
				color: #fff
				text-decoration: none
				transition: color 200ms ease-in-out

				&:hover {
					color: $aqua
				}

				+below(375px) {
					font-size: rem(22)
				}
			}

			&__text {
				margin-right: rem(10)
				font-family: $montserrat-font-family
				font-size: rem(14)
				font-weight: 400
				color: #fff
				text-transform: uppercase

				+below(375px) {
					font-size: rem(12)
				}
			}
		}
	}

	&__message {
		&__link {
			display: block
			margin-bottom: rem(10)
			font-family: $caslon-font-family
			font-size: rem(24)
			font-weight: 700
			font-style: italic
			color: #fff
			text-decoration: none
			transition: color 200ms ease-in-out

			&:hover {
				color: $aqua
				border-color: $aqua
			}
		}

		.button {
			padding: rem(6) rem(6) rem(4)
			font-weight: 400
		}
	}

	&__nav {
		cf()
		center(rem(850))
		font-family: $montserrat-font-family
		font-size: rem(12)
		font-weight: 400
		color: #43484c
		text-transform: uppercase

		p {
			font-size: rem(12)
		}

		a {
			text-decoration: none
			color: inherit
			transition: color 200ms ease-in-out

			&:hover {
				color: $aqua
			}
		}

		.footer__site-map {
			list-style-type: none
			padding: 0

			&__item {
				display: inline-block

				// item separator
				&::after {
					content: '|'
					margin-left: rem(4)
				}

				&:last-child::after {
					content: none
				}

				&:nth-child(3)::after {
					+above(960px) {
						content: none
					}
					+below(414px) {
						content: none
					}
				}
			}
		}
	}

	&__logo {
		display: block
		margin: rem(45) auto rem(10)

		+below(960px) {
			display: none
		}
	}

	&__site-map,
	&__copy {
		col(2/5)
		margin-top: rem(60)

		+below(960px) {
			margin-top: rem(10)
			margin-bottom: 0
		}
	}

	&__badge {
		col(1/5)
		shift(2/5)
	}

	&__site-map {
		shift(2/5)
		text-align: left
	}

	&__copy {
		shift(-3/5)
		text-align: right
	}

	p.footer__copy {
		font-family: $montserrat-font-family
		line-height: rem(20)
	}

	// Nullifies any source ordering
	&__site-map,
	&__copy,
	&__badge {
		+below(960px) {
			col(5/5)
			unshift()
		}
	}

	&__social,
	&__contact,
	&__message {
		col(1/3)

		+below(960px) {
			// Centers in a column all elements
			stack()
		}
	}

	&__message {
		+below(960px) {
			display: none
		}
	}

	&__contact {
		+below(375px) {
			margin-left: rem(10)
			width: rem(310)
		}

		+below(320px) {
			margin-left: rem(-20)
		}
	}
}


