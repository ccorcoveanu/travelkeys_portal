// !Checkboxes
// ==|=========================================================================
.checkbox {
    display: none
}

.checkbox + label span {
    display: inline-block
    vertical-align: top
    margin-right: rem(4)
    width: rem(20)
	height: rem(20)
	background-color: #fff
	border: 1px solid #c5c5c5
    cursor: pointer

    +below(960px) {
	    vertical-align: bottom
	    width: rem(15)
	    height: rem(15)
    }
}

.checkbox:checked + label span {
	vertical-align: top
	border-color: $aqua
    background-color: #fff
    background-image: url('../images/svg/icon-checkmark-blue.svg')
    background-repeat: no-repeat
    background-position: center center

    +below(960px) {
	    vertical-align: bottom
	    background-size: cover
    }
}


.checkbox--alt + label span {
	position: relative
	vertical-align: middle
	margin-top: rem(-3)
	border: 0
	right: rem(3.1)
	width: rem(20)
	height: rem(20)
	background-color: transparent
	background-image: url('../images/svg/icon-checkbox-empty-gray.svg')
    background-position: center center
    background-size: cover

	+below(960px) {
		width: rem(12)
		height: rem(12)
	}

	+below(670px) {
		width: rem(11)
		height: rem(11)
	}
}

.checkbox--alt:checked + label span {
	position: static
	vertical-align: middle
	margin-top: rem(-3)
	border: 0
	background-color: transparent
	background-image: url('../images/svg/icon-checkbox-fill.svg')
    background-size: cover
}

.checkbox--alt:checked + .filter__option__label {
	color: $aqua
	cursor: pointer
}

.checkbox--new + label span {
	vertical-align: middle
	margin-top: rem(-3)
	border: 0
	width: rem(20)
	height: rem(20)
	background-color: transparent
	background-image: url('../images/svg/icon-checkbox-empty-new.svg')
    background-position: center center
    background-size: cover
}

.checkbox--new:checked + label span {
	vertical-align: middle
	margin-top: rem(-3)
	border: 0
	background-color: transparent
	background-image: url('../images/svg/icon-checkbox-fill-new.svg')
    background-size: cover
}

