// Map
.villa-search {
	&__section {
		padding: 0 rem(30)

		&.-no-padding {
			padding: 0
		}

		+below(960px) {
			display: none
		}

		&__title {
			margin: rem(60) auto rem(20)
			font-size: rem(74)

			&.-has-arrow {
				position: relative

				&::after {
					content: ''
					position: absolute
					z-index: 10
					right: 0
					bottom: rem(-37px)
					left: 0
					display: block
					margin-right: auto
					margin-left: auto
					width: 0
					height: 0
					border-style: solid
					border-width: rem(18) rem(20) 0 rem(20)
					border-color: #191d21 transparent transparent transparent
				}
			}
		}

		.map {
			position: relative
			min-height: rem(790)

			&__container {
				width: 100%
				min-height: rem(790)
			}
			&__overlay {
				position: absolute
				z-index: 1
				background-color: rgba(#101316, 0.9)
				width: 100%
				height: rem(100)

				&.-position-top {
					top: 0

					&::after {
						position: absolute
						top: 100%
						border: solid transparent
						content: ''
						height: 0
						width: 0
						pointer-events: none
						border-top-color: rgba(16, 19, 22, .95)
						border-width: 15px 20px 20px
					}
				}
			}

			.-position-bottom {
				position: absolute
				right: 0
				left: 0
				bottom: 60px
				height: initial
				background-color: transparent
			}

			.gm-style .gm-style-iw{
				overflow: visible
			}

			.gm-style-cc {
				display: none
			}

			.gmnoprint.gm-style-cc {
				display: none
			}

			img[src*="google4"] {
    			display: none
			}

			.gm-style-iw {
				top: 0 !important
				left: 0 !important
				right: 0 !important
				bottom: 0 !important
				height: 305px !important
				width: 272px !important
				& > div {
					width: 270px
				}
				+ div { display: none }
			}

			// Remove copyright stuff
			.gmnoscreen {
				display: none
			}
			.gmnoprint span {
				display: none
			}
			img[src='https://maps.gstatic.com/mapfiles/api-3/images/google_white2.png'] {
				display: none
			}
			a[href='https://www.google.com/intl/en-US_US/help/terms_maps.html'] {
				display: none
			}

			.marker {
				&__content {
					position: absolute
					top: 10px
					left: 10px
					right: 10px
					bottom: 10px
					width: 252px
				}
				&__image {
					display: block
					width: 252px
					height: 160px
				}
				&__favorite {
					color: #333
					text-decoration: none

					.icon__heart {
						margin-right: 5px
					}

					&:hover {
						.icon__heart {
							@extends .icon__heart-full
						}
					}
				}
				&__title {
					display: block
					overflow: hidden
					text-overflow: ellipsis
					margin: 7px 0
					width: 252px
					height: 39px

					font-family: BebasNeueBook, Arial,sans-serif
					font-size: 36px
					font-weight: 300

					color: #333
					text-transform: uppercase
					text-decoration: none
				}
				&__body {
					display: block
					overflow: hidden
					text-overflow: ellipsis
					margin: 0
					width: 252px
					height: 35px
					color: gray
					font-family: Montserrat, Arial,sans-serif
					font-size: 12px
					line-height: 1.5
					font-weight: 300
					letter-spacing: -0.3px
					text-align: left
					text-transform: uppercase
					text-decoration: none
				}

				&__buttons {
					margin: 10px auto 10px auto
					width: 258px
				}
			}
		}
	}
}

