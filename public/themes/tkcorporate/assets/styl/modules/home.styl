.concierge {
	position: relative
	margin-top: rem(-4)

	.button--next-section.-shape-trapezoid {
		  position: absolute
		  top: -6%
		  right: 0
		  left: 0
		  margin: 0 auto
		  border-bottom-color: $dark-gray

		  .icon {
			  margin-top: rem(15)
		  }

		+below(960px) {
		  display: none
		}
	}

	&__button {
		padding: rem(8) rem(30)
		min-width: rem(380)
		font-size: rem(18)

		+below(960px) {
			min-width: 0
		}

		+below(480px) {
			width: 100%
		}
	}

	p&__reminder {
		margin: rem(30) auto rem(45)
		font-family: $caslon-font-family
		font-size: rem(32)
		font-style: italic

		+below(960px) {
			margin: rem(30) auto
			font-size: rem(22)
		}
	}

	&__list,
	&__featured {
		list-style-type: none
		padding: 0

		&__item {
			display: inline-block
		}
	}

	&__list {
		cf()
		text-align: left

		+below(960px) {
			center(400px)
		}

		&__item {
			span(1/4)
			padding: rem(14) 0
			font-family: $montserrat-font-family
			font-size: rem(16)
			color: #fff
			text-transform: uppercase

			+below(960px) {
				span(2/4)
				padding: rem(6) 0
				font-size: rem(11)
			}

			// Custon bullets
			&::before {
				content: ''
				display: inline-block
				vertical-align: middle
				margin-right: rem(5)
				width: rem(20)
				height: rem(20)
				background-image: url('../images/svg/icon-checkmark.svg')
				background-repeat: no-repeat

				+below(960px) {
					background-image: url('../images/svg/icon-checkmark-mobile.svg')
				}
			 }
		}
	}

	&__featured {
		margin-top: rem(25)

		+below(960px) {
			margin-top: rem(15)
		}

		&__wrapper {
			margin-top: rem(65)

			+below(960px) {
				margin-top: rem(55)
			}
		}

		&__item {
			vertical-align: middle
			padding-right: rem(45)

			&:last-child {
				padding-right 0
			}

			// Keeps logos on one line
			+below(990px) {
				padding-right: rem(20)
			}

			+below(960px) {
				padding-right: 0
			}

			+below(850px) {
				padding-right: rem(40)
			}

			+below(600px) {
				padding-right: rem(0)
			}

			+below(400px) {
				width: rem(120)
			}

			img {
				display: inline-block
				vertical-align: super

				+below(960px) {
					width: 80%
				}

				+below(850px) {
					width: 100%
				}

				+below(600px) {
					width: 80%
				}
			}
		}
	}
}

.experience {
	.section__container {
		+between(375px, 480px) {
			max-width: rem(290)
		}
	}

 	&__title {
		margin: rem(10) 0 rem(20) 0
	}

	.location {
		display: block
	}

	p {
		color: #808080

		+below(960px) {
			font-size: rem(15)
			line-height: rem(24)
		}

		+below(480px) {
			text-align: left
		}
	}

	&__strong {
		display: block

		+below(960px) {
			margin-bottom: rem(10)
		}
	}

	&__list {
		display: inline-block
		list-style-type: none
		margin-top rem(30)
		border: 1px solid #e5e5e5
		padding: rem(10)
		background-color: #fff
		text-align: center

		+below(960px) {
			center(rem(620))
			border: 0
			padding: 0
			background-color: transparent
		}

		+below(650px) {
			width: 100%
		}

		&__item {
			position: relative
			display: inline-block
			margin-right: rem(5)
			width: rem(235)

			&:last-child {
				margin-right: 0
			}

			+below(960px) {
				// Gutter explicitly declares padding , 1 = 10px
				col(1/2, gutter: 2, cycle: 2 )
				margin-bottom: rem(10)
				width: rem(300)
				height: rem(270)
			}

			+below(650px) {
				stack()
				margin-right: 0
				width: 100%
				height: auto
			}

			img {
				margin-bottom: -1px
				display: block
				width: 100%
			}

			.button {
				position: absolute
				top: calc(50% - 20px)
				right: 0
				left: 0
				margin: 0 auto
				max-width: rem(200)
				width: 100%

				+below(650px) {
					max-width: rem(220)
				}
			}
		}
	}
}

.featured {
	padding: rem(90) 0
	background-color: $light-gray
	background-image: url('../images/bg/bg-villa.jpg')
	background-repeat: no-repeat
	background-size: 100% rem(450)

	+below(960px) {
		padding: rem(25) 0 rem(50)
		background-size: 100% rem(400)

		.button__secondary {
			display: none
		}
	}

	+below(670px) {
		background-size: 150% rem(300)
	}

	&__title {
		margin: rem(14) auto
		font-size: rem(74)

		+below(960px) {
			font-size: rem(30)

			&::after,
			&::before {
				content: ''
				display: inline-block
				opacity: .6
				position: relative
				top: rem(-5)
				width: rem(55)
				height: 1px
				background-color: #fff
			}

			&::before {
				margin-right: rem(20)
			}

			&::after {
				margin-left: rem(20)
			}
		}

		+below(670px) {
			margin-top: rem(5)
			&::after,
			&::before {
				content: none
			}
		}
	}

	&__subtitle {
		font-weight: 400

		&.-color-white {
			&::after,
			&::before {
				background-color: #fff
			}
		}

		+below(960px) {
			font-size: rem(12)

			&::after,
			&::before {
				content: none
			}
		}

		+below(670px) {
			margin-bottom: rem(5)

			&::after,
			&::before {
				content: ''
				background-color: #d8d8d8
			}
		}
	}
}

.featured__item {
	cf()

	position: relative
	margin-top: rem(16)
	margin-bottom: rem(16)
	border: 1px solid #e5e5e5
	padding: rem(10) rem(10) rem(16)
	background-color: #fff
	width: 100%

	+below(670px) {
		padding-top: rem(5)
		padding-right: rem(5)
		padding-left: rem(5)
	}

	&.-is-special {
		border-color: $aqua

		&::after {
			content:''
			display: block
			position: absolute
			top: rem(-23)
			left: rem(-30)
			width: rem(160)
			height: rem(160)
			background-image: url('../images/svg/no-sprite/ribbon.svg')
			background-repeat: no-repeat
			background-size: contain

			+below(960px) {
				top: rem(-17)
				left: rem(-22)
				width: rem(120)
				height: rem(120)
			}

			+below(670px) {
				top: rem(-14)
				left: rem(-17)
				width: rem(100)
				height: rem(100)
			}
		}
	}

	&__title {
		position: relative
		margin-top: rem(5)
		margin-bottom: 0
		font-family: $bebas-font-family
		font-size: rem(36)
		line-height: 1.2
		text-align: center
		font-weight: 300
		color: #333
		white-space: nowrap

		a {
			text-decoration: none
			color: inherit

			&:hover {
				.icon {
					@extends .icon__heart-featured-full
				}
			}
		}

		span {
			overflow: hidden
			display: block
			margin: 0 auto
		    max-width: 80%
		    text-overflow: ellipsis
		}

		.icon {
			position: absolute
			top: rem(10)
			left: 0
		}
	}

	&__description {
		margin-top: rem(5)
		text-align: center
		font-family: $montserrat-font-family
		font-size: rem(12)
		font-weight: 700
		line-height: 1.5
		color: gray
		text-transform: uppercase
		text-overflow: ellipsis
		white-space: nowrap
	}

	&__section {
		cf()

		margin: rem(15) auto rem(20)
		max-width: rem(270)

		+below(400px) {
			margin-bottom: rem(15)
		}
	}

	&__facilities {
		float: left
	    border-right: 1px solid #d3d3d3
		padding-top: rem(10)
		padding-bottom: rem(10)
	    width: 50%
	    height: 100%
	    text-align: left
	    font-family: $montserrat-font-family
	    font-size: rem(12)
	    font-weight: 400
	    color: gray
	    text-transform: uppercase

		span {
			display: block
			line-height: 1.5
		}
	}

	&__price {
		padding-top: rem(10)
		padding-left: 9%
	    width: 50%
	    text-align: left
	    border-right: 0
		float: left
	    clear: none
	}

	&__buttons {
		cf()
	}

	&__button {
		display: inline-block
		width: 50%

		.button {
			width: 100%

			+below(960px) {
				padding-right: 0
				padding-left: 0
				text-align: center
			}
		}

		&:first-child {
			float: left
			padding-right: rem(3)

			.button {
				padding-top: rem(11)
				padding-bottom: rem(9)
				font-size: rem(16)
			}
		}

		&:last-child {
			float: right
			padding-left: rem(3)
		}

		+below(400px) {
			width: 100%
			margin-top: rem(5)
			margin-bottom: rem(5)

			&:first-child,
			&:last-child {
				padding-right: 0
				padding-left: 0
			}
		}
	}
}

.price {
