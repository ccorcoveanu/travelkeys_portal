// !Sections
// ==|=========================================================================
.section {
	cf()
	position: relative
	padding: rem(40) 0 rem(50)
	text-align: center

	&.-background-gray {
		background-color: #f6f6f6
	}

	&.-background-globe {
		background-image url("../images/svg/no-sprite/globe.svg")
		background-repeat: no-repeat
		background-size: 40%
		background-position -25% rem(240)

		// +below(1240px) {
		// 	background-position -80% rem(240)
		// }

		+below(960px) {
			background-image: none
		}
	}

	.button--next-section {
		  position: absolute
		  top: -6%
		  right: 0
		  left: 0
		  margin: 0 auto
		  border-bottom-color: $dark-gray

		  .icon {
			  margin-top: rem(15)
		  }

		+below(960px) {
		  display: none
		}
	}

	&.-style-pattern {
		background-color: $dark-gray
		background-image: url('../images/pattern.png')
		background-repeat: repeat

		&.-color-lighter {
			background-color: $light-gray
			background-image: url('../images/pattern-lighter.png')
		}

		&.-color-light {
			background-color: #fff
			background-image: url('../images/pattern-white.png')
		}

		.concierge__reminder {
			+below(960px) {
				font-size: rem(22)
			}
		}

		p {
			margin-right:  auto
			margin-left: auto
			max-width: rem(768)
			line-height: 1.7
			color: #808080
		}
	}

	+below(960px) {
		padding: rem(25) 0
	}

	&__header {
		cf()

		margin-bottom: rem(25)
		padding: rem(25) rem(30) 0

		+below(960px) {
			margin-bottom: rem(10)
			padding: 0
		}

		&__title {
			margin: 0
			font-family: $caslon-font-family
			font-size: rem(30)
			font-weight: 600
			font-style: italic
			color: #333

			&--alt {
				display: none
				font-family: $bebas-font-family
				font-size: rem(24)
				font-weight: 400
				text-transform: uppercase
				color: #333

				.title--alt__number {
					color: #808080
				}

				.title--alt__separator {
					margin: 0 rem(5)
				}
			}

			+below(960px) {
				span {
					display: none
				}
			}
		}

		&__subtitle {
			margin: 0
			font-family: $caslon-font-family
			font-size: rem(24)
			font-weight: 600
			font-style: italic
			color: #808080
		}

		.search-toggle {
			&__container {
				position: relative
				display: inline-block
				opacity: 1
				visibility: visible
				vertical-align: middle
				margin-right: rem(4)
				transition: opacity 300ms ease-out, visibility 300ms ease-out

				&.-fixed-top {
					+below(960px) {
						position: fixed
						z-index: 300
						top: rem(60)
						right: 0
						width: 60%
					}

					+below(735px) {
						width: 65%
					}

					+below(670px) {
						width: 100%
					}

					+below(480px) {
						top: rem(54)
					}
				}

				&.-hidden {
					opacity: 0
					visibility: hidden
				}

				+below(960px) {
					margin: 0
					border-bottom: 1px solid #017579
					padding: 0 rem(10)
					width: 100%
					background-color: $aqua

					.search-filters {
						display: inline-block
						position: absolute
						top: 0
						left: 0
						margin-left: 0
						border: 0
						background-color: transparent
						width: 100%
						height: 100%
						background-image: none
						transition: color 200ms ease-in-out

						&:hover {
							color: #000
							background-color: transparent
						}

						&.-anchor-modal {
							+below(960px) {
								display: none
							}

							+below(670px) {
								padding-right: rem(15)
								line-height: rem(20)
							}
						}

						&.-anchor-expand {
							display: none

							+below(960px) {
								display: block
							}
						}
					}
				}

				+below(670px) {
					padding-top: rem(5)
					position: fixed
					z-index: 300
					top: rem(60)
					left: 0
				}

				+below(480px) {
					top: rem(54)
				}
			}

			&__title {
				display: none
				font-family: $caslon-font-family
				font-size: rem(14)
				font-weight: 600
				font-style: italic
				color: #fff

				+below(960px) {
					display: inline-block
					float: left
				}
			}
		}

		&__wrapper {
			span(1/2)

			&.-position-left {
				text-align: left

				.form__input__container {
					display: none
				}

				+below(960px) {
					margin-top: rem(60)
					width: 100%
					text-align: center

					.form__input__container {
						display: block
					}
				}

				+below(670px) {
					margin-top: rem(20)
				}
			}

			&.-position-right {
				margin-top: rem(12)
				text-align: right

				+below(960px) {
					position: absolute
					margin-top: 0
					width: 60%

					.form__input__container {
						display: none
					}
				}

				+below(735px) {
					width: 65%
				}

				+below(690px) {
					width: 100%
				}
			}
		}

		&.-is-accordion {
			border-bottom: 1px solid #dfdfdf
			padding-top: 0
			background-color: #ebebeb

			.section__header__title,
			.section__header__subtitle {
				display: none
			}

			.section__header__title--alt {
				display: inline-block
			}

			.search-filters.-anchor-expand {
				display: inline-block

				+below(960px) {
					display: none
				}
			}

			.search-filters.-anchor-modal {
				+below(960px) {
					display: block
				}
			}

			.section__header__wrapper {
				&.-position-left {
					span(2/6)
					text-align: left
				}

				&.-position-right {
					span(4/6)
					text-align: right

					+below(960px) {
						width: 100%
					}
				}
			}
		}

		&.-is-opened {
			.section__header__title {
				+below(960px) {
					margin: 0
					font-size: rem(30)
				}
			}

			.section__header__subtitle {
				+below(960px) {
					display: none
				}
			}

			.search-filters {
				display: none
			}

			.section__header__wrapper {
				&.-position-left {
					span(1/2)
					text-align: left

					+below(960px) {
						margin-top: rem(40)
						width: 100%
						text-align: center

						.form__input__container {
							float: none
							display: inline-block
							margin-left: 0
							padding: 0

							&::after {
								content: ''
							}

							.icon {
								display: inline-block
							}
						}
					}
				}

				&.-position-right {
					span(1/2)
					text-align: right

					+below(960px) {
						width: 100%
					}
				}
			}
		}
	}

	&__container {
		center(rem(990))
		padding: 0 rem(15)

		+below(960px) {
			center(rem(640))
		}
	}

	&__title {
		margin: rem(24) 0 rem(50) 0
		font-family: $caslon-font-family
		font-size: rem(42)
		font-weight: 600
		font-style: italic
		color: #333

		&.-color-white {
			color: #fff
		}

		+below(960px) {
			margin: rem(14) 0 rem(30)
			font-size: rem(30)
		}
	}

	&__subtitle {
		margin-bottom: rem(10)
		font-family: $montserrat-font-family
		font-size: rem(16)
		font-weight: 400
		line-height: 1
		color: #999
		text-transform: uppercase

		+below(960px) {
			font-size: rem(13)
		}

		&.-color-white {
			color: #fff
		}

		// Lines-on-Sides for headers
		&::after,
		&::before {
			content: ''
			display: inline-block
			position: relative
			top: rem(-5)
			width: rem(30)
			height: 1px
			background-color: #999

			+below(960px) {
				width: rem(15)
			}
		}

		&::before {
			margin-right: rem(20)
		}

		&::after {
			margin-left: rem(20)
		}
	}

	p {
		font-family: $helvetica-font-family
		line-height: rem(30)
		font-weight: 400
		font-size: rem(17)
	}
}

// !Welcome
// ==|=========================================================================
.welcome {
	p {
		color: #70767b
	}

	.location {
		margin-top: rem(30)

		+below(550px) {
			margin-right: auto
			margin-left: auto
			max-width: rem(380)
		}

		&__item {
			margin: 0
			min-width: rem(190)

			+below(960px) {
				margin: rem(20) 0
				padding	: 0 rem(5)
				min-width: rem(125)
			}

			+below(670px) {
				margin: rem(15) 0
			}

			.icon {
				+below(960px) {
					margin-top: rem(20)
				}
			}

			&::after {
				content: ''
				position: absolute
				top: 0
				right: 0
				width: 1px
				height: rem(50)
				background-color: #fff

				+below(960px) {
					height: 100%
				}
			}

			&:nth-child(4) {
				&::after {
					+below(960px) {
						content: none
					}
				}
			}

			&:nth-child(2n) {
				&::after {
					+below(550px) {
						content: none
					}
				}

				&::before {
					+below(550px) {
						content: ''
						position: absolute
						top: auto
						right: 0
						bottom: rem(-15)
						left: rem(-70)
						width: rem(130)
						height: 1px
						background-color: rgba(#fff, .1)
					}
				}
			}

			&:last-child {
				&::after {
					content: none
				}

				&::before {
					+below(550px) {
						content: none
					}
				}
			}
		}
	}
}

// !Message
// ==|=========================================================================
.message {
	padding-top: rem(75)
	padding-bottom: rem(110)
	background-color: $dark-gray

	p {
		margin: 0 auto
	}

	+below(960px) {
		padding: rem(50) rem(10) rem(60)
	}

	&.-border-bottom {
		+above(960px) {
			border-bottom: 5px solid #3b4147
		}
	}

	&__title {
		margin: rem(15) auto rem(25)

		+below(960px) {
			margin-bottom: rem(30)
		}

		+below(670px) {
			margin-bottom: rem(10)
			max-width: rem(280)
			font-size: rem(30)
		}
	}
	.flexbox &__subtitle,
	&__subtitle {
		+below(680px) {
			font-size: rem(12)

			&::before,
			&::after {
				top: rem(5)
				max-width: rem(15)
			}

			&::before {
				margin-right: rem(15)
			}

			&::after {
				margin-left: rem(15)
			}
		}
	}
}

.message.section {
	a {
		text-decoration: none

		&:hover {
			text-decoration: underline
		}
	}

	+below(960px) {
		p {
			margin-right: auto
			margin-left: auto
			width: rem(500)
			font-size: rem(13)
		}
	}

	+below(670px) {
		p {
			width: rem(280)
			line-height: rem(20)

			&::first-line {
				line-height: rem(35)
			}
		}
	}
}

.message--white {
	.button {
		margin-top: 0
	}

	&__title {
		margin-top: 0
		margin-bottom: rem(20)
		font-family: $bebas-font-family
		font-size: rem(62)
		font-weight: 300
		color: #4b4747
		text-shadow: 0 0 49px rgba(0, 0, 0, 0.21)

		+below(670px) {
			font-size: rem(35)
		}
	}

	&__subtitle {
		margin: rem(20) auto rem(5)
		font-family: $caslon-font-family
		font-size: rem(32)
		font-weight: 300
		font-style: italic
		color: #c0c0c0

		+below(670px) {
			max-width: rem(320)
			font-size: rem(23)
		}
	}

	&.-border-top {
		border-top: 5px solid $aqua

		+below(670px) {
			border-top-width: 3px
		}
	}
}

.section.message.message--white {
	.form--letter.form--letter-alt.filter {
		+below(670px) {
			padding-bottom: 0
		}
	}

	.form--letter__label.form--letter__label-alt.-anchor-main-text,
	.form--letter__label {
		color: #707070
	}

	.form--letter__input__container {
		margin-bottom: rem(20)
	}

	.form--letter__label {
		+below(670px) {
			position: static
			text-transform: capitalize
		}
	}

	.form--letter__input {
		border-color: #cdcdcd

		+below(670px) {
			margin-left: 0
			padding-left: rem(10)
			width: 80%
		}
	}
	.form--letter__input__container.-has-textarea {
		+below(670px) {
			margin-top: rem(20)
		}

		.form--letter__label {
			width: rem(120)
			background-color: #fff
			background-image: none

			+below(960px) {
				width: rem(100)
			}

			+below(670px) {
				position: absolute
				top: rem(10)
			}
		}

		.form--letter__input.-anchor-textarea {
			text-indent: rem(120)

			+below(960px) {
				text-indent: rem(100)
			}
		}
	}

	.form--letter__input.-anchor-textarea {
		+below(670px) {
			width: rem(280)
		}
	}
}

// !Search
// ==|=========================================================================
.search-results {
	position: static
	float: right
	border-left: 1px solid #dfdfdf
	padding-top: rem(10)
	width: 65%
	background-color: #ebebeb

	.section__header--mobile {
		.filter__input {
			+below(960px) {
				padding: 0

				.select2-chosen {
					position: relative
					top: rem(-2)
					height: rem(30)
				}
			}
		}

		.filter__input__container.-anchor-counter {
			+below(960px) {
				margin-top: rem(10)
				margin-bottom: rem(20)
				height: rem(30)

				.icon {
					display: block
					top: rem(3)
				}

				&::after {
					content: ''
					top: rem(3)
					right: rem(30)
					height: 80%
				}
			}

			+below(670px) {
				float: none
			}
		}
	}


	+above(960px) {
		.filter--side {
			max-height: 84vh
		}
	}

	+below(960px) {
		padding-top: 0
		width: 60%
		background-color: $light-gray
	}

	+below(735px) {
		width: 65%
	}

	+below(670px) {
		border-left: 0
		width: 100%
	}

	.featured__container {
		+above(960px) {
			margin: 0 auto
			max-width: rem(735)
		}
	}

	.featured__picture__container {
		&.-has-ribbon {
			&::after {
				top: rem(-33)

				+below(960px) {
					top: rem(-20)
					left: rem(-25)
					width: rem(110)
					height: rem(110)
				}

				+below(670px) {
					top: rem(-16)
					left: rem(-20)
					width: rem(80)
					height: rem(80)
				}
			}
		}
	}

	// Filters become expandable
	&.-is-accordion {
		background: $light-gray

		.filter-aside {
			overflow: hidden
			position: relative
			top: auto
			display: block
			width: 100%
			max-height: 0
			background-color: #ebebeb
			transition: max-height 600ms ease-in-out

			.filter--side__wrapper.-last {
				background-color: #ebebeb
			}


			// Cancels scroll events
			&.-bottom {
				position: relative
			}

			&.-is-opened {
				max-height: 999px
				height: 100vh

				+below(960px) {
					height: initial
				}
			}

			.filter--side {
				float: left
				padding: 0 rem(20)
				margin: rem(20) 0
				width: rem(780)

				+above(1440px) {
					float: none
					center(765px)
				}

				.no-slider {
					width: rem(600)
				}
			}

			.filter--side__input__container {
				margin: 0 rem(5) 0 0
			}

			.filter--side__input__container.-anchor-counter {
				max-width: rem(180)
			}

			.filter--side__subtitle {
				display: inline-block
				margin-right: rem(30)
				width: rem(70)
			}

			.filter__options {
				display: inline-block
				vertical-align: middle
			}


			.filter--side__wrapper {
				padding: rem(8) 0

				&.-helper-inline {
					padding: rem(10) 0
					text-align: left

					.filter--side__subtitle {
						display: inline-block
						position: relative
						left: 0
						top: 0
					}
				}

				&.-last {
					padding: 0

					.filter__button__wrapper {
						display: block
						text-align: left
						margin-left: rem(9)

						+below(960px) {
							margin-left: 0
						}

						.button {
							&.-ui-cancel {
								display: inline-block
								padding-top: rem(17)
								padding-bottom: rem(15)
								width: 35%

								+below(960px) {
									display: none
								}
							}

							&.-ui-confirm {
								margin-right: rem(10)
								width: 62%
							}

							+below(960px) {
								width: 100%

								&::after {
									content: none
								}
							}
						}
					}
				}
			}

			// Hooks for subtitles
			.filter--side__wrapper__inner {
				&.-last {
					display: inline-block
					width: rem(530)
					vertical-align: text-top

					.filter__option {
						width: rem(160)
					}
				}

				.button__expand {
					position: absolute
					top: rem(15)
					right: 0
					vertical-align: middle
					margin-top: 0
					margin-bottom: rem(10)
				}

				&.-first {
					position: absolute
					top: rem(10)
					left: rem(105)
					width: 100%
				}
			}

			.no-slider__container {
			  position: absolute
			  top: rem(15)
			  left: rem(116)
			}

			.no-slider__limit__container {
				  width: 101%
				  margin-left: rem(-4)
				  margin-top: rem(10)
			}
		}
	}
}

.search-aside {
	position: fixed
	float: left
	width: 35%
	transition: max-height 200ms ease-in-out

	+below(960px) {
		width: 40%
	}

	+below(735px) {
		width: 35%
	}

	+below(667px) {
		height: 100%
	}

	+below(670px) {
		.filter--side {
			background-color: #f9f9f9
		}
	}

	// Contains map upon reaching bottom (JS)
	&.-is-bottom {
		position: absolute !important
		overflow: hidden
		top: auto !important
		bottom: 0
	}

	&.-hidden {
		display: none

		+below(960px) {
			display: block
		}
	}
	.map__container {
		height: 100vh
	}
}

.map-aside {
	position: static

	&.-fixed-top {
		position: fixed
		top: 0
	}

	+below(670px) {
		display: none
	}

	.-position-bottom {
		display: none

		+below(960px) {
			display: block
			position: absolute
			bottom: rem(100)
			left: 18%

			.button {
				display: block
				margin: 0 auto
				width: 100%
			}
		}

		+below(670px) {
			display: none
		}
	}

	.map__input {
	    position: absolute
	    z-index: 200
	    top: rem(70)
		right: rem(20)
		padding: rem(12)
		background-color: rgba(#101316, 0.8)

		+below(960px) {
			display: none
		}
	}

	&.-fixed-top {
		.map__input {
			top: rem(130)
			transition: all 300ms ease-in-out
		}
	}
}


.aside__button {
	&__wrapper {
		display: none
		.button {
			display: none
		}

		+below(960px) {
			display: block
			position: absolute
			bottom: 0
			width: 100%
			font-size: rem(16)

			.button {
				padding rem(15) rem(15) rem(12)
				width: 100%
				&:after {
					content: none
				}
			}
		}
	}
}

// !Overrides
// ==|=========================================================================
.fancybox-outer.search-results {
	position: relative
	float: none
	width: 100%
	background-color: transparent

	.filter-aside {
		float: none
	}
