.boxes {
	cf()
}
.box {
	position: relative
	margin: rem(30) auto
	padding: rem(10)
	width: 100%
	min-height: rem(560)
	height: 100%
	text-align: left
	background-color: #fff
	box-shadow: 0 1px 3px rgba(0, 0, 0, .1)

	+below(960px) {
		col(1/2, cycle: 2)
		margin: rem(15) 0
		padding: rem(5)
		min-height: rem(455)
		text-align: left
	}

	+below(670px) {
		col(2/2, uncycle: 2, cycle: 1)
		float: none
		margin-right: auto
		margin-left: auto
		max-width: rem(400)
		text-align: left

		// Overrides jeet's margin-right 0
		&:nth-child(1n) {
			margin-right: auto
			float: none
		}
	}

	&.-has-badge {
		+between(670px, 800px) {
			background-image: url('../images/svg/icon-badge-small.svg')
			background-repeat: no-repeat
			background-position: 50% 95%
		}
	}

	&__image__container {
		position: relative
		height: 100%

		+below(960px) {
			height: rem(190)
		}

		&::after {
			content: ''
			position: absolute
			top: rem(-4)
			left: 0
			width: 100%
			height: 100%
			background-image: linear-gradient(to top, rgba(0, 0, 0, .6) 0%, rgba(0, 0, 0, 0) 100%)

			+below(960px) {
				content: none
			}
		}
	}

	&__image {
		width: 100%
		height: 100%
	}

	&__wrapper {
		position: absolute
		bottom: rem(40)
		left: rem(65)
		max-width: rem(800)

		+below(960px) {
			position: static
			margin: rem(22) 0 0 rem(18)
		}
	}

	&__title,
	&__text {
		color: #fff
		text-shadow: 0 1px 3px rgba(0, 0, 0, 0.22)

		+below(960px) {
			text-shadow: none
		}
	}

	&__title {
		margin-bottom: 0
		font-family: $caslon-font-family
		font-size: rem(56)
		line-height: rem(56)
		font-weight: 600
		font-style: italic

		+below(960px) {
			color: #333
			font-size: rem(30)
			line-height: 1
		}
	}

	p&__text {
		margin-top: rem(10)
		line-height: rem(27)
		color: #fff

		+below(960px) {
			color: #808080
			font-size: rem(15)
			line-height: rem(24)
		}

		strong {
			color: #fff

			+below(960px) {
				color: #808080
			}
		}
	}

	.icon {
		display: none
		margin: 0 auto

		+between(670px, 960px) {
			display: block
		}
	}

	.list {
		margin-top: rem(40)

		&__item {
			margin-bottom: rem(5)
			width: 100%
			font-size: rem(11)
			color: #333
			text-transform: uppercase

			&::before {
				margin-top: rem(-4)
			}
		}
	}
