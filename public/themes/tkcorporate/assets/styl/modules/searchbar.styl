.searchbar {
	position: relative
	margin-right: auto
	margin-left: auto
	border: rem(3) solid rgba(#f0eef9, 0.2)
	max-width: rem(750)
	width: 100%
	transition: all 200ms ease-in

	&.-is-active {
		border-color: rgba(#f0eef9, 0.4)

		.searchbar__wrapper {
			background-color: #fdfdfd
		}
	}

	&__period {
		position: absolute
		top: 0
		right: rem(250)
		display: block
		margin-right: auto
		margin-left: auto
		height: 100%
		font-family: $montserrat-font-family
		font-size: rem(15)
		line-height: 3.8
		color: #808080
		cursor: pointer
	}

	&__wrapper {
		cf()

		margin: 1px
		background-color: rgba(255, 255, 255, 0.9)
	}

	&__controls {
		display: inline-block
		float: right

		& select.js-select2 {
			visibility: hidden
		}
	}

	&__dates {
		position: absolute
		z-index: 10
		top: rem(52)
		border: 1px solid #e5e5e5
		width: rem(612)
		opacity: 0
		visibility: hidden
		transition: opacity 200ms ease-in-out, visibility 200ms ease-in-out

		&.-is-open {
			opacity: 1
			visibility: visible
		}

		.ui-datepicker {
			cf()

			border: 0
			padding: 0
			width: 100% !important
		}

		.ui-datepicker-group {
			float: left
			padding-top: rem(15)
			padding-bottom: rem(25)
			width: 50%

			&:first-child {
				border-right: 1px solid #e5e5e5
			}
		}

		.ui-datepicker-calendar {
			width: initial !important
		}

		.ui-selected-range:not(.ui-datepicker-unselectable) {
			background-color: $aqua

			.ui-state-default {
				color: #fff
			}
		}
	}

	.dates {

		&__wrapper {
			cf()
		}

		&__group {
			float: left
			padding-top: rem(25)
			padding-bottom: rem(20)
			width: 50%
			background-color: $light-gray
			border-bottom: 1px solid #e5e5e5


			&:first-child {
				border-right: 1px solid #e5e5e5
			}
		}

		&__label {
			display: block
			margin-bottom: rem(10)
			font-family: $montserrat-font-family
			font-size: rem(12)
			line-height: 1.2
			color: #808080
			text-transform: uppercase
		}

		&__input {
			display: block
			outline: 0
			border: 0
			width: 100%
			font-family: $bebas-font-family
			font-weight: 700
			font-size: rem(35)
			text-align: center
			color: $aqua
			background-color: transparent

			&::placeholder {
				font-size: rem(50)
				line-height: 0.7
				font-weight: 400
				color: $aqua
			}
		}
	}

	&__people {
		display: inline-block
		vertical-align: middle
		width: rem(46)
		height: rem(52)

		.select2-choice {
			display: table !important
			padding-left: 0
		}

		.select2-choice.select2-default {
			display: block !important
		}

		.select2-chosen {
			display: table-cell !important
			vertical-align: middle !important
			height: rem(52)
			margin-right: 0 !important
			padding-left: 0 !important
		}


		.select2-default {
			background-image: url("../images/svg/icon-people.svg") !important
			background-size: contain !important
			background-position: center !important
			background-size: rem(24) !important
			background-repeat: no-repeat !important
		}

		.select2-default .select2-chosen {
			color: transparent !important
		}
	}

	&__dates-button {
		display: inline-block
		vertical-align: middle
		width: rem(46)
		height: rem(52)
		background-image: url("../images/svg/icon-date.svg")
		background-size: contain
		background-size: rem(24)
		background-position: center
		background-repeat: no-repeat
	}

	&__people,
	&__dates-button {
		position: relative

		&::after {
			content: ''
			position: absolute
			top: rem(12)
			left: rem(-3)
			width: 1px
			height: rem(26)
			background-color: #dfdfdf
		}
	}

	&__button {
		float: right
		outline: 0
		height: rem(52)
		font-size: rem(15)
		box-shadow: none
	}

	&__input {
		float: left
		outline: 0
		border: 0
		padding-left: rem(20)
		max-width: rem(480)
		width: 100%
		height: rem(52)
		font-family: $montserrat-font-family
		font-size: rem(15)
		line-height: 1.2
		color: #808080
		background-color: transparent

		&::placeholder {
			text-transform: uppercase
			color: #808080
		}
	}
}
