.select2-highlighted {
	background: $aqua !important
}

// !Autocompleter
// ==|=========================================================================
.autocompleter  {
	z-index: 20
	top: calc(100% - 1px)
	width: rem(612)
	background-color: #fdfdfd
	max-width: 100%;

}

.autocompleter-list {
	text-align: left
	font-family: $montserrat-font-family
	font-size: rem(15)
	line-height: 1.2
	color: #808080
}

.autocompleter-item {
	padding-top: rem(10)
	padding-bottom: rem(10)
	padding-left: rem(20)
}

.autocompleter-item-selected {
	background-color: $aqua
	color: #fff
}

// !Fancybox
// ==|=========================================================================
.fancybox-skin {
	background-color: transparent
}

.fancybox-inner::-webkit-scrollbar {
	display: none
}

.fancybox-nav {
	top: calc-50-minus(50)
	width: rem(80)
	height: rem(100)
	background-color: white
	background-position: center center
	background-repeat: no-repeat
	transition: background 200ms
}

.fancybox-prev {
	left: rem(-80)
	background-image: url('../images/svg/no-sprite/gallery-arrow-left-black.svg')

	&:hover {
		background-image: url('../images/svg/no-sprite/gallery-arrow-left-blue.svg')
	}
}

.fancybox-next {
	right: rem(-80)
	background-image: url('../images/svg/no-sprite/gallery-arrow-right-black.svg')

	&:hover {
		background-image: url('../images/svg/no-sprite/gallery-arrow-right-blue.svg')
	}
}
